#!/bin/bash -e
#
# S2I run script for the 'springboot-gradle-s2i image.
# The run script executes the server that runs your application.
#
# For more information see the documentation:
#   https://github.com/openshift/source-to-image/blob/master/docs/builder_image.md
#

#If APP_TARGET is unset or blank, set default to the JAR name found (-printf grabs just jar name)
if [ -z "$APP_TARGET" ]; then
  APP_TARGET=`find /tmp/src/build/libs -name *.jar -printf "%f\n"`
  echo "---> \$APP_TARGET not set, defaulting to [${APP_TARGET}]"
else
  echo "---> \$APP_TARGET set with value: [${APP_TARGET}]"
fi

java $JAVA_OPTS -jar /tmp/src/build/libs/$APP_TARGET
